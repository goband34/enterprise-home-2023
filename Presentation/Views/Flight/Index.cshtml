@{
    Layout = "_Layout";
    ViewData["Title"] = "Flights";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Flight Route</th>
            <th scope="col">Departure Date</th>
            <th scope="col">Arrival Date</th>
            <th scope="col">Price</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in (IQueryable<Domain.ViewModels.FlightVM>)ViewData["flights"])
        {
            <tr>
                <td>@flight.FlightRoute</td>
                <td>@flight.DepartureDate</td>
                <td>@flight.ArrivalDate</td>
                <td>@(flight.Price)&euro;</td>
                <td><a href="@(Url.RouteUrl("flights.book", new { id = flight.ID }))">Book</a></td>
            </tr>
        }
    </tbody>
</table>

